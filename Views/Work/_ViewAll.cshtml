@model IEnumerable<taskmanager.Models.Work>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">GoalTime</th>
            <th>
                <a onclick="showInModal('@Url.Action("AddOrEdit", "Work", null, Context.Request.Scheme)' , 'New Work')" class="btn btn-info"><i class="fa fa-plus"></i>  Add Work</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                <a onclick="showInModal('@Url.Action("AddOrEdit", "Work", new {id = item.Id } , Context.Request.Scheme)' , ' Update Work')" class="btn btn-secondary"><i class="fa fa-pencil-square-o"></i></a>
                    <form asp-action="Delete" method="POST" asp-route-id="@item.Id" onsubmit="return ajaxDelete(this);" class="d-inline">
                        <button type="submit" value="Delete" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    </form>
                </td>
            </tr>
        }


    </tbody>
</table>